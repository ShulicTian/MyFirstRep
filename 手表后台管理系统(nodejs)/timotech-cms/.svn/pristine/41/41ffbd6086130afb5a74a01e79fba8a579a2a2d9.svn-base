router.post('/device/getdgClassroom', auth.userRequired, auth.adminRequired, deviceCtrl.getClassroom);
router.post('/device/getdgAlarm', auth.userRequired, auth.adminRequired, deviceCtrl.getAlarm);
router.post('/device/getdgFriends', auth.userRequired, auth.adminRequired, deviceCtrl.getFriends);
