<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="web.ssm.mapper.ItemMapper">
	
	<select id="findItems" parameterType="string" resultType="item" >
		select * from item where name LIKE #{name}
	</select>
	
	<select id="getItem" parameterType="int" resultType="item" >
		select * from item where id=#{id}
	</select>
	
	<insert id="addItem" parameterType="item">
		insert into item(name,much,photo,user_id) value(#{name},#{much},#{photo},#{user.id})
	</insert>
	
</mapper>